@model  AccesoBolsaTrabajo3.Models.ConfirmPhoneNumberViewModel

@{
    ViewBag.Title = "Confirmar el código enviado";
}

@using (Html.BeginForm("ConfirmPhone", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    <h2>@ViewBag.Title.</h2>

    <div class="row">
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <h3>Introduce el código que te enviamos a tu teléfono: @ViewBag.phoneNumber</h3>
        <br />
        <div class="row">
            <div class="col-md-5">
                <form class="form-inline my-2 my-lg-0">
                    @Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label" })
                    @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Código", @class = "hidden" })
                    @Html.TextBoxFor(m => m.Code, new { placeholder = "Código", @class = "form-control" })
                </form>
            </div>
            <div class="col-md-2">
                <input type="submit" class="btn btn-success btn-md" value="Enviar" />
            </div>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
